{
  "name": "martial-arts-manager",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wrangler pages dev --local --port 5173",
    "dev:local": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "predeploy": "pnpm typecheck && pnpm lint",
    "deploy": "pnpm predeploy && pnpm build && wrangler pages deploy dist --project-name=martial-arts-manager --branch=main && node scripts/post-deploy.mjs",
    "deploy:quick": "pnpm build && wrangler pages deploy dist --project-name=martial-arts-manager && node scripts/post-deploy.mjs",
    "type-check": "tsc --noEmit",
    "db:local": "wrangler d1 execute martial-arts-db --local --file=./schema.sql",
    "db:prod": "wrangler d1 execute martial-arts-db --file=./schema.sql"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@tanstack/react-virtual": "^3.13.12",
    "clsx": "^2.1.1",
    "daisyui": "^5.1.29",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.22",
    "i18next": "^25.6.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.545.0",
    "qrcode": "^1.5.4",
    "react": "^19.1.1",
    "react-calendar": "^6.0.0",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.64.0",
    "react-i18next": "^16.0.0",
    "react-router-dom": "^7.9.4",
    "recharts": "^3.2.1",
    "sonner": "^2.0.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.6.0",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.21",
    "baseline-browser-mapping": "^2.9.18",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "jsdom": "^27.4.0",
    "msw": "^2.12.7",
    "postcss": "^8.5.6",
    "tailwindcss": "4.1.14",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "npm:rolldown-vite@7.1.14",
    "vitest": "^4.0.18",
    "wrangler": "^4.42.1"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.1.14"
    },
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide"
    ]
  }
}
